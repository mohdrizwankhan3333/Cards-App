<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <a class="text-blue-500 hover:underline" href="/">Back to Create</a>
        
        <h1 class="text-3xl tracking-tighter mb-3 mt-5">All Users</h1>

        <% users.forEach(function(user) { %>
        <div class="users flex gap-3 flex-wrap">
            <div class="user max-w-72 p-5 bg-zinc-800 rounded-lg">
                <div class="w-full h-72 rounded-lg bg-zinc-700 object-top overflow-hidden">
                    <img class="w-full h-full object-cover" src="<%= user.img %>" alt="User Image">
                </div>
                <h3 class="text-xl mt-3 tracking-tighter"><%= user.username %></h3>
                <h5 class="text-zinc-500"><%= user.email %></h5>
                <div class="flex gap-3 mt-3">
                    <a class="text-zinc-200 hover:underline" href="#">Edit User</a>
                    <a class="text-red-500 hover:underline" href="/delete/<%= user._id%>">Delete User</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</body>
</html>
